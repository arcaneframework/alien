{
    "version": 3,
    "configurePresets": [
        {
            "name": "minimal",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/minimal",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfos",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ALIEN_DEFAULT_OPTIONS": "OFF",
                "ALIENDEV_EMBEDDED": "ON"
            },
            "warnings": {
                "uninitialized": true
            }
        },
        {
            "name": "full",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/full",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ALIEN_DEFAULT_OPTIONS": "ON",
                "ALIENDEV_EMBEDDED": "ON",
                "ALIEN_PLUGIN_HYPRE": "ON",
                "ALIEN_PLUGIN_PETSC": "ON",
                "ALIEN_UNIT_TESTS": "ON"
            }
        },
        {
            "name": "minimal-ccache",
            "inherits": "minimal",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "full-ccache",
            "inherits": "full",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        },
        {
            "name": "debug-ccache",
            "inherits": "full-ccache",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ALIEN_EXPAND_TESTS": "ON"
            }
        },
        {
            "name": "ginkgo-omp",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build-ginkgo-omp",
            "cacheVariables": {
                "ALIEN_PLUGIN_GINKGO": "ON",
                "ALIEN_PLUGIN_GINKGO_OMP": "ON"
            }
        },
        {
            "name": "ginkgo-ref",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build-ginkgo-ref",
            "cacheVariables": {
                "ALIEN_PLUGIN_GINKGO": "ON",
                "ALIEN_PLUGIN_GINKGO_REF": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "minimal",
            "configurePreset": "minimal"
        },
        {
            "name": "full",
            "configurePreset": "full-ccache"
        },
        {
            "name": "debug",
            "configurePreset": "debug-ccache"
        },
        {
            "name": "ginkgo-omp",
            "configurePreset": "ginkgo-omp"
        },
        {
            "name": "ginkgo-ref",
            "configurePreset": "ginkgo-ref"
        }
    ]
}